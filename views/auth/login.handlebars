<div class="row">
  <div class="col-md-6">
    <h2>Login</h2>

    <form class="form login-form">
      <div class="form-group">
        <label for="name-login">name:</label>
        <input class="form-input" type="text" id="name-login" />
        <p id="name-login-error"></p>
      </div>
      <div class="form-group">
        <label for="password-login">password:</label>
        <input class="form-input" type="password" id="password-login" />
        <p id="password-login-error"></p>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">login</button>
        <p id="login-error"></p>
      </div>
    </form>
  </div>
  <div class="col-md-6">
    <h2>Signup</h2>

    <form class="form signup-form">
      <div class="form-group">
        <label for="name-signup">name:</label>
        <input class="form-input" type="text" id="name-signup" />
        <p id="name-signup-error"></p>
      </div>
      <div class="form-group">
        <label for="password-signup">password:</label>
        <input class="form-input" type="password" id="password-signup" />
        <p id="password-signup-error"></p>
      </div>
      <div class="form-group">
        <label for="confirm-password-signup">confirm password:</label>
        <input class="form-input" type="password" id="confirm-password-signup" />
        <p id="confirm-password-signup-error"></p>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">signup</button>
        <p id="signup-error"></p>
      </div>
    </form>
  </div>
</div>

<script src="/scripts/auth/login.js"></script>
