<div class="row">
  <div class="col-auto">
    <h2>Profile</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <form class="form profile-form" method="post">
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
        <p id="profile-error"></p>
      </div>
      <div class="form-group">
        <label for="skills">skills:</label>
        <textarea class="form-input" type="text" id="skills" name="skills">{{skills}}</textarea>
      </div>
      <div class="form-group">
        <label for="project-funding">accomplishments:</label>
        <textarea class="form-input" type="text" id="accomplishments" name="accomplishments">{{accomplishments}}</textarea>
      </div>
    </form>
  </div>
</div>

<script src="/scripts/profile.js"></script>
